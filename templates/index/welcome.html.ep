% layout 'default';
% title 'Welcome';
% my $posts = db->resultset('Post');

% if (0 == $posts->count) {
	<p>None: </p>
% }

% while (my $post = $posts->next) {
	<a href="/posts/<%= $post->id %>"><h2><%= $post->title %></h2></a>
	<p2><%= $post->content %></p2>
	<p2><%= $post->author%></p2>
	<p2><%= $post->date_published%></p2>
% }

