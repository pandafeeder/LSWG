% layout 'welcome';
% title 'LSWG';
% my $posts = db->resultset('Post');
% use Text::Markdown;
% my $m = Text::Markdown->new;

<header>
Coal Alley 
</header>

<div id = "content">
% if (0 == $posts->count) {
	<p>None: </p>
% }
% while (my $post = $posts->next) {
%	my $content = $m->markdown($post->content);
	<a href="/posts<%= $post->id %>"><h2><%= $post->title %></h2></a>
	<p><%== $content %></p>
	%== $post->date_published
% }
</div>
